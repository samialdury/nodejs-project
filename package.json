{
    "name": "nodejs-project",
    "version": "1.3.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "node --no-warnings --require dotenv/config --loader tsx --watch --watch-preserve-output src/main.ts | pino-pretty",
        "eslint:check": "eslint --max-warnings 0 .",
        "eslint:write": "eslint --max-warnings 0 --cache --cache-location .cache/eslint --fix .",
        "lint:check": "pnpm run prettier:check && pnpm run eslint:check",
        "lint:write": "pnpm run prettier:write && pnpm run eslint:write",
        "prepare": "husky install",
        "prettier:check": "prettier --check .",
        "prettier:write": "prettier --cache --cache-location=.cache/prettier --write .",
        "test": "glob -c 'DOTENV_CONFIG_PATH=.test.env node --no-warnings --require dotenv/config --loader tsx --test' '{src,test}/**/*.test.ts'",
        "test:watch": "glob -c 'DOTENV_CONFIG_PATH=.test.env node --no-warnings --require dotenv/config --loader tsx --watch --watch-preserve-output --test' '{src,test}/**/*.test.ts'"
    },
    "dependencies": {
        "envey": "1.1.3",
        "pino": "8.15.0",
        "zod": "3.21.4"
    },
    "devDependencies": {
        "@commitlint/cli": "17.6.7",
        "@commitlint/config-conventional": "17.6.7",
        "@samialdury/config": "4.1.0",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/git": "10.0.1",
        "@total-typescript/ts-reset": "0.4.2",
        "@types/node": "20.4.7",
        "@typescript-eslint/eslint-plugin": "6.2.1",
        "@typescript-eslint/parser": "6.2.1",
        "dotenv": "16.3.1",
        "eslint": "8.46.0",
        "eslint-config-prettier": "8.10.0",
        "eslint-import-resolver-typescript": "3.5.5",
        "eslint-plugin-import": "2.28.0",
        "eslint-plugin-unicorn": "48.0.1",
        "glob": "10.3.3",
        "lint-staged": "13.2.3",
        "pino-pretty": "10.2.0",
        "prettier": "3.0.1",
        "prettier-plugin-packagejson": "2.4.5",
        "prettier-plugin-sh": "0.13.1",
        "semantic-release": "21.0.7",
        "ts-node": "10.9.1",
        "tsx": "3.12.7",
        "typescript": "5.1.6"
    },
    "optionalDependencies": {
        "husky": "8.0.3"
    },
    "packageManager": "pnpm@8.6.11",
    "engines": {
        "node": ">=20",
        "pnpm": ">=8"
    }
}
