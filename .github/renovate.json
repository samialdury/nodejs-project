{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:js-app",
        ":semanticCommits",
        ":timezone(Europe/Prague)",
        "schedule:monthly",
        ":disableRateLimiting",
        ":label(dependencies)",
        ":separateMultipleMajorReleases",
        "docker:disableMajor",
        "npm:unpublishSafe",
        "group:allNonMajor",
        "group:definitelyTyped",
        "group:jsTestNonMajor",
        "group:linters"
    ],
    "platformCommit": true
}
